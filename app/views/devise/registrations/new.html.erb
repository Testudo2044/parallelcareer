<head>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="bg-gradient-to-l from-red-400 to-yellow-500">
<%= render '/layouts/header' %>
<div class=" text-white lg:w-8/12 w-10/12 m-auto">
 <h2 class="text-3xl font-light text-center pt-24 mb-3">会員登録</h2>
  <div class="mb-6">


    <div class="bg-white text-black mb-12 border-white-700  border-2 rounded p-8 shadow-lg">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    

      <div class="text-left mb-3 lg:w-5/12 w-10/12 m-auto">
        <%= f.label :お名前,class: 'text-1xl  text-left ' %><br />
        <%= f.text_field :name, autofocus: true, placeholder:'原　キャリー', class: 'border-2 border-gray-300  focus:border-orange-600 rounded-lg py-1  block w-full m-auto  appearance-none leading-normal' %>
      </div>


      <div class="text-left mb-3 lg:w-5/12 w-10/12 m-auto">
        <%= f.label :電話番号,class: 'text-1xl relative' %><br />
        <%= f.number_field :phonenumber, autofocus: true, placeholder: '09012345678', class: '   border-2 border-gray-300  focus:border-orange-600 rounded-lg py-1  block w-full m-auto  appearance-none leading-normal  ' %>
      </div>


      <div class="text-left mb-3 lg:w-5/12 w-10/12 m-auto">
        <%= f.label :email, class: 'text-1xl relative ' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: '   border-2 border-gray-300  focus:border-orange-600 rounded-lg py-1  block w-full m-auto  appearance-none leading-normal' %>
      </div>


      <div class="text-left mb-3 lg:w-5/12 w-10/12 m-auto">
        <%= f.label :password, class: 'text-1xl relative' %>
        <% if @minimum_password_length %>
        <em class="">(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: '   border-2 border-gray-300  focus:border-orange-600 rounded-lg py-1  block w-full m-auto  appearance-none leading-normal' %>
      </div>


      <div class="text-left mb-10 lg:w-5/12 w-10/12 m-auto">
        <%= f.label :password_confirmation, class: 'text-1xl relative ' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: '   border-2 border-gray-300  focus:border-orange-600 rounded-lg py-1  block w-full m-auto  appearance-none leading-normal' %>
      </div>

    
      <div class="mb-3 lg:w-5/12 w-8/12 m-auto text-center">
        <%= f.submit "登録", class: 'w-8/12 bg-blue-500 text-white font-bold rounded-xl'%>
      </div>
    <% end %>
    
    <div class="lg:flex lg:w-5/12 w-11/12 m-auto text-center justify-between">
      <%= render "devise/shared/links", class:'w-full m-auto ' %>
    </div>
  </div>
 </div>
</body>